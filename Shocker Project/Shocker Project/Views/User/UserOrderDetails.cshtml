<script src="https://cdn.jsdelivr.net/npm/vue@2.7.14"></script>
<script src="~/axios/axios.min.js"></script>
<script>
    var baseAddress = "https://localhost:7033/User";
    var Vue = new Vue({
        el: '#app',
        data: {
            Orders: [],
            buyerAccount: "",
            address: "",
            orderDate: "",
            requiredDate: "",
            buyerPhone: "",
            payMethod: "",
            quantity: "",
            status: "",
            sellerAccount: "",
            productName: "",
            unitPrice: "",
            categoryName: "",
            starCount: "",
            totalPrice: []
        },
        mounted: function () {
            this.getOrders();
        },
        methods: {
            getOrders: function () {
                alert('getOrders')
                axios.get(`${baseAddress}/GetOrders`).then(response => {
                    alert(response.data);
                    this.Orders = response.data;
                    var value = 0;
                    for (var i = 0; i < this.Orders.length; i++) {
                        value = 0;
                        for (var j = 0; j < this.Orders[i].quantity.length; j++) {
                            value += this.Orders[i].quantity[j] * this.Orders[i].unitPrice[j];
                        }
                        this.totalPrice.push(value)
                    }
                });
            }
        }
    });
</script>			